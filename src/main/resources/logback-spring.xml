<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <logger name="org.springframework.web" level="WARN"/>

    <property name="LOG_PATH" value="." />

    <!-- No need to explicitly define a console appender - there is one provided by Spring's base config: -->
    <appender name="CUSTOMFILEAPPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/mylogfile.log</file>
        <encoder>
            <pattern>%level [%thread] %d{yyyy-MM-dd HH:mm:ss.SSS} - %logger{0}: %message %n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/main.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>
    </appender>


    <logger name="com.example" level="INFO" additivity="true" />

    <root level="INFO">
        <appender-ref ref="CUSTOMFILEAPPENDER" />
    </root>
</configuration>
